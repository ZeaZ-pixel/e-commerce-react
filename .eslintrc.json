{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion":12,
        "sourceType": "module",
        "requireConfigFile": false,
        "babelOptions": {
            "presets": ["@babel/preset-react"]
        }
    },
    "plugins": [
        "react",
        "@babel"
    ],
    "rules": {
        "no-unused-vars": [1, { "caughtErrorsIgnorePattern": "^ignore" }],
    	"react/jsx-uses-react": 1,
        "react/jsx-uses-vars": "error",
        "react/prop-types": 0,
        "react/jsx-key": 0,
        "react/display-name": 0,
        "linebreak-style": 0
    }
}